    <main class="container">
        <div class="parent-container">
            <div class="container-box">
                <h2>Saved Links</h2>
                <ul class="link-list" id="saved-links">
                    <li><a href="https://www.wikipedia.org">Wikipedia</a></li>
                    <li><a href="https://www.github.com">GitHub</a></li>
                    <li><a href="https://www.stackoverflow.com">Stack Overflow</a></li>
                </ul>
                <div class="pagination" id="pagination">
                    <button onclick="changePage(-1)">&laquo; Previous</button>
                    <button onclick="changePage(1)">Next &raquo;</button>
                </div>
            </div>
            <div class="container-box">
                <h2>Default Links</h2>
                <ul class="link-list">
                    <li><a href="https://www.mozilla.org">Mozilla</a></li>
                    <li><a href="https://www.python.org">Python</a></li>
                    <li><a href="https://www.reddit.com">Reddit</a></li>
                </ul>
            </div>
        </div>

        <div class="add-link">
            <button onclick="addLink()">Add Link</button>
        </div>

        <div class="landscape">
            <h3>Additional Links</h3>
            <ul class="link-list">
                <li><a href="https://www.medium.com">Medium</a></li>
                <li><a href="https://www.quora.com">Quora</a></li>
                <li><a href="https://www.twitch.tv">Twitch</a></li>
            </ul>
        </div>
    </main>

    <script>
        let savedLinks = [
            "https://www.wikipedia.org",
            "https://www.github.com",
            "https://www.stackoverflow.com"
        ];
        let currentPage = 1;

        function addLink() {
            const newLink = prompt("Enter the URL of the link:");
            if (newLink) {
                savedLinks.push(newLink);
                alert("Link added successfully!");
                renderLinks();
            }
        }

        function renderLinks() {
            const linksPerPage = 3;
            const startIndex = (currentPage - 1) * linksPerPage;
            const endIndex = startIndex + linksPerPage;
            const visibleLinks = savedLinks.slice(startIndex, endIndex);

            const savedLinksContainer = document.getElementById("saved-links");
            savedLinksContainer.innerHTML = "";

            visibleLinks.forEach(link => {
                const li = document.createElement("li");
                li.innerHTML = `<a href="${link}" target="_blank">${link}</a>`;
                savedLinksContainer.appendChild(li);
            });
        }

        function changePage(direction) {
            const totalPages = Math.ceil(savedLinks.length / 3);
            currentPage = Math.max(1, Math.min(currentPage + direction, totalPages));
            renderLinks();
        }

        renderLinks();
    </script>
